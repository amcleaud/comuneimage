        <a class="logo" href="{{ path('sonata_admin_dashboard') }}">
            <img src="{{ asset('bundles/cuicore/images/logo.png') }}" alt="Logo CUI" />
        </a>
    {% endspaceless %}
{% endblock %}

{% block side_bar_after_nav_content %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('bundles/ivoryckeditor/ckeditor.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/sonataformatter/vendor/markitup-markitup/markitup/jquery.markitup.js') }}"></script>
