{% extends "CUIPagesBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - {{ page.rubrique.nom | default("") }} - {{ page.nom }}{% endblock %}

{% block banniere %}
	<div class="item active">
		    <img src="{{ asset('bundles/cuipages/images/bandeau_pages_'~ page.rubrique.id | default("") ~'.jpg' ) }}" alt="banniere" />
	</div>
{% endblock %}

{% block content %}
	<div class="container margePage">
		<div id="header-page">

			<h1>{{ page.rubrique.nom | default("") | upper }}</h1>

			<h2>{{ page.titre|upper }}</h2>

		</div>

		<div id="contenu-page">
			{{ page.contenu|raw }}
			<div class="clearfix"></div>
		</div>
	</div>
{% endblock %}

{% block stylesheets %}

	{{ parent() }}
	  <link rel="stylesheet" href="{{ asset('bundles/cuipages/css/view.css') }}" type="text/css" />

{% endblock %}

{% block javascripts %}
	{{ parent() }}
    <script src="{{ asset('bundles/cuipages/js/view.js') }}"></script>
{% endblock %}